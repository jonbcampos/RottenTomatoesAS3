<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="New Release Dvds View"
		xmlns:services="com.rottentomatoes.services.*" xmlns:rottentomatoes="com.rottentomatoes.*">
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;
			
			protected function searchButton_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				service.apikey = "eqpp2cjgerkbytvvjc5jkju2";
				service.getNewReleaseDvd(int(limitQty.text));
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<rottentomatoes:RottenTomatoesService id="service"/>
	</fx:Declarations>
	<s:titleContent>
		<s:TextInput prompt="Limit Quantity" id="limitQty" width="100%" restrict="0-9"/>
	</s:titleContent>
	<s:actionContent>
		<s:Button label="Search" id="searchButton" click="searchButton_clickHandler(event)"/>
	</s:actionContent>
	<s:List width="100%" height="100%" labelField="title" id="list" dataProvider="{new ArrayList(service.lastResult as Array)}"/>
</s:View>
